
@{
    ViewBag.Title = "Add";
}


<div id="create-movie">
    <h2>Add a new movie to the catalog</h2>
    <form data-bind="submit: save" >
        
        <div class="form-group">
            <input type="text" name="title" class="input-lg form-control" data-bind="value: title" placeholder="e.g. The Lego Movie">
        </div>
        <div class="form-group">
            <textarea name="description" class="form-control" rows="10" data-bind="value: description" placeholder="What's it about?'"></textarea>
        </div>
        <div class="form-group">
            <label for="genres" >Genres</label>
            <input type="text" name="title" class="input-lg form-control" data-bind="value: genres" placeholder="action,comedy ...">
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>

    </form>
</div>

@section scripts{
    
    <script src="~/public/js/movie/CreateMovieViewModel.js"></script>
    <script>
        $(function() {
            ko.applyBindings(new CreateMovieViewModel(), document.getElementById("create-movie"));
        })
    </script>
}
